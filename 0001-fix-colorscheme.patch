diff --git a/lua/config/options.lua b/lua/config/options.lua
index 6d472c4..9c2efc9 100644
--- a/lua/config/options.lua
+++ b/lua/config/options.lua
@@ -45,6 +45,8 @@ opt.title = true
 opt.undofile = true
 opt.updatetime = 200
 opt.wildmode = "longest:full,full"
